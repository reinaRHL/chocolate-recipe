<div class= "center jumbotron">
    <h1>Chocolate Recipe</h1>
    <h3>Create your own chocolate recipe!</h3>
    <br>
    <hr class="thickLine">
  <div class = "row content">
    <% @recipes.each do |recipe| %>
      <div class = "row cn">
        <div class = "col-lg-8 col-md-8 col-sm-8 inner">
          <h4><%= link_to recipe.title, recipe_path(recipe) %></h4>
          <h6><%= truncate(recipe.description, length: 17) %></h6>
        </div>
      
        <div class = "col-lg-4 col-md-4 col-sm-4 inner">
          <%= link_to edit_recipe_path(recipe), class: "btn btn-default" do %>
            <i class="glyphicon glyphicon-edit"></i>
          <% end %>
          <%= link_to recipe_path(recipe), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" do %>
            <i class="glyphicon glyphicon-trash"></i>
          <% end %>
        </div>
      </div>
      
      <div class = "row cn">
        <div class = "col-lg-12 col-md-12 col-sm-12 inner">
          <hr>
        </div>
      </div>
    <% end %>
  </div>
</div>
